{% for post in postList | reverse %}

<div class="post-card">
    <p class="text-center">
        {% for tag in post.data.tags | filterTagList %}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}">#{{ tag }}</a>&ensp;
        {% endfor %}
    </p>
    
    <h2 class="text-center"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    
    <p class="text-center"><small>{{ post.date | postDate }}</small></p>
    
    <p><a href="{{ post.url }}"><img src="{{ post.data.img}}" alt="{{ post.data.img-alt }}"></a></p>
    
    
    <p>{{ post.data.summary }}</p>
</div>

{% endfor %}